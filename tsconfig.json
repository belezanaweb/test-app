{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
     "paths": {
       "*": ["src/*"],
       "@assets/*": ["assets/*"],
       "@containers/*": ["containers/*"],
       "@router/*": ["router/*"],
       "@services/*": ["services/*"],
       "@shared/*": ["shared/*"],
     },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}